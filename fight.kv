#:kivy 2.0.0
<TitleScreen>:
    Image:
        allow_stretch:1
        keep_ratio: 0
        source:"./images/stars.zip"
    BoxLayout: 
        orientation: "vertical"
        
            
        Label:
            font_size: 72
            text: "Species Standoff"
        BoxLayout:
            padding: 40
            orientation: "vertical"
            Button:
                text: 'Play'
                size_hint: .5, .5
                pos_hint: {"center_x": .5}
                
                background_color: .9,.1,.8
                on_press:
                    root.manager.transition.direction = 'up'
                    root.manager.current = 'map'
            Label:
                text: ""
            Button:
                text: 'Settings'
                size_hint: .2, .2
                pos_hint: {"center_x": .5}

                background_color: .9,.1,.8
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'settings'

<SettingsScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: 'Toggle Music'
            on_press:
                root.stop_music()
        Button:
            text: 'Back to menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'

<MapScreen>:
    Image:
        allow_stretch:1
        keep_ratio:0
        source:"./images/stars.zip"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        Button:
            text: "back"
            size_hint: .5, .5
            pos_hint: {"center_x":.5}
            background_color: .9,.1,.8
            on_press:
                root.manager.transition.direction = "down"
                root.manager.current = "menu"
        BoxLayout:
            orientation: "horizontal"
            padding: 10
            Button:
                text: "Level 1"
                background_color: .9,.1,.8
                on_press:
                    root.change_transition("fade")
                    root.manager.current = "shop"
                    root.change_transition("slide")
            Button:
                text: "Level 2"
                disabled: True
                background_color: .9,.1,.8
            Button:
                text: "Level 3"
                disabled: True
                background_color: .9,.1,.8
            Button:
                text: "Level 4"
                disabled: True
                background_color: .9,.1,.8
            Button:
                text: "Level 5"
                disabled: True
                background_color: .9,.1,.8
        BoxLayout:
            orientation: "horizontal"
            padding: 10
            Button:
                text: "Tier 1"
                background_color: .9,.1,.8
            Button:
                text: "Tier 2"
                disabled: True
                background_color: .9,.1,.8
            Button:
                text: "Tier 3"
                disabled: True
                background_color: .9,.1,.8

#:import create_spacer kivy_garden.draggable._utils._create_spacer
<ReorderableGridLayout@KXReorderableBehavior+GridLayout>:
<DraggableItem>:
    orientation: "vertical"
    do_anim: not self.is_being_dragged
    anim_duration: .2
    drag_cls: 'buy'
    drag_timeout: 50
    font_size: 30
    species:''
    cost:0
    on_drag_success: self.myfunc()
    opacity: .5 if self.is_being_dragged else 1
    size_hint_min: 30, 30
    pos_hint: {'center_x': .5, 'center_y': .5, }
    sauce: ''
    canvas.after:
        Color:
            rgba: .5, 1, 0, 1 if root.is_being_dragged else .5
    Label:
        size_hint_y:.2
        text: root.species 
    
<MyButton@Button>:
    font_size: sp(20)
    size_hint_min_x: self.texture_size[0] + dp(10)
    size_hint_min_y: self.texture_size[1] + dp(10)

<ShopScreen>:
    doaload: self.on_load()
    Image:
        allow_stretch:1
        keep_ratio:0
        source:"./images/spaceshop.png" 
    BoxLayout:
        orientation:"vertical"
        
        BoxLayout:
            size_hint_y: .2
            Button:
                text: "Back"
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'
            ShopButton:
                orientation:"vertical"
                
                BoxLayout:
                    Label:
                        size_hint_x: 4
                        font_size:32
                        text: "Shop"
                    Label:
                        text: str(app.money)
                    
                    Image:
                        source: "./images/coin.png"
            Button:
                text: "Continue"
                on_press:
                    doathing:root.bfunction()
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'fight'
        Label:
            text: ""
            size_hint_min: 30,10
        ReorderableGridLayout:
            id:play
            spacing: 10
            padding: 10
            drag_classes: ['buy','sell','order' ]
            cols: 6
            spacer_widgets:
                [create_spacer(color=color)
                for color in "#11ccee".split()]
        ReorderableGridLayout:
            id:sh1
            spacing: 10
            padding: 10
            drag_classes: [ ]
            cols: 6
            spacer_widgets:
                [create_spacer(color=color)
                for color in "#000044 #002200 #440000".split()]

<FightScreen>:
    Image:
        allow_stretch:1
        keep_ratio:0
        source:"./images/spaceshop.png"